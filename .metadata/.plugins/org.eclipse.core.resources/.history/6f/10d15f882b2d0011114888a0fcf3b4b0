package cste.android.core;

import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.net.Socket;
import java.net.UnknownHostException;

import cste.hnad.HnadTcpClientInterface;
import android.app.Service;
import android.content.SharedPreferences;

import static cste.android.activities.PreferencesActivity.*;


public class HnadTcpClient implements HnadTcpClientInterface{
	private static String server = "";
	private static int port = 0;
	private static Service hostService;
	private static SharedPreferences mSettings;
	Socket s;
	
	private OutputStream out;
	private InputStream in;
	
	
	public static void setServiceHost(Service host){
		//hostService = host;
		mSettings = host.getSharedPreferences(PREFERENCES_FILE, 0);
	}
	
	public HnadTcpClient(){


	}
	
	protected void loadSettings(){
		server = mSettings.getString(SERVER_ADDRESS, "0.0.0.0");
		port = mSettings.getInt(SERVER_PORT, 0);
	}
	
	public void sendPacket(){

	}

	@Override
	public boolean connectToServer() {
		loadSettings();
		// TODO Auto-generated method stub
		try {
			s = new Socket(server,port);
		} catch (UnknownHostException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return false;
	}
}
