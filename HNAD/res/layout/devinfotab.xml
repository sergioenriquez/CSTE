<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <TextView  
	        android:text="UID:"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	    <TextView  
	        android:text="Seal ID:"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	    <TextView  
	        android:text="Manifest:"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	    <TextView  
	        android:text="Conveyance:"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView  
	        android:text="Alarm:"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView  
	        android:text="Door Open:"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView  
	        android:text="Op Mode:"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView  
	        android:text="Rssi"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <TextView  
	        android:id="@+id/devUID"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	    <TextView  
	        android:id="@+id/devSeal"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	    <TextView  
			android:id="@+id/devManifest"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	    <TextView  
			android:id="@+id/devConveyance"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	    <TextView  
	        android:id="@+id/devAlarmOn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView  
	        android:id="@+id/devDoor"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView  
	        android:id="@+id/devOpMoce"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView  
	        android:id="@+id/devRssi"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	</LinearLayout>
</LinearLayout>