	    android:stretchColumns="*"/>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:stretchColumns="0,1">
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/uid"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:textSize="12dp"/>
        </TableRow>

        <TableRow><!-- VALUE -->
            <TextView
                android:id="@+id/devUID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/na"/>
            <TextView
                android:id="@+id/devType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/na"/>
        </TableRow>
        
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signal"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/textView6"
                android:text="@string/ackNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"/>
        </TableRow>

        <TableRow><!-- VALUE -->
            <TextView
                android:id="@+id/rssiVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/na"/>
            <TextView
                android:id="@+id/ackNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/na"/>
        </TableRow>
		
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/gps"
                android:textSize="12dp"/>
        </TableRow>

        <TableRow><!-- VALUE -->
            <TextView
                android:layout_span="2"
                android:id="@+id/gpsLoc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/na"/>
        </TableRow>
        
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/conveyance"
                android:textSize="12dp"/>
        </TableRow>
        
        
        <TableRow><!-- VALUE -->
            <TextView
                android:layout_span="2"
                android:id="@+id/conveyanceID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/na"/>
        </TableRow>

    </TableLayout>
    
