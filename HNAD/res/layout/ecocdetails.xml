	<TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:stretchColumns="*">
	    <TableRow>
		    <TextView  
		        android:layout_marginTop="10dp"
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
			   	android:text="Alarm Status" />
        </TableRow>

        <TableRow>
	        <CheckBox 
		        android:id="@+id/lockOpenBox"
		        android:text="Lock Open"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
			<CheckBox 
		        android:id="@+id/haspOpenBox"
		        android:text="Hasp Broken"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
        </TableRow>
        
        <TableRow>
			<CheckBox 
		        android:id="@+id/offCourseBox"
		        android:text="Off Route"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
			<CheckBox 
		        android:id="@+id/offScheduleBox"
		        android:text="Off Schedule"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
        </TableRow>

	     <TableRow>
			<TextView  
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
		    	android:text="Device Errors" />
        </TableRow>

        <TableRow>
			<CheckBox 
		        android:id="@+id/configMalfunctionBox"
		        android:text="Config Malfunction"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
			<CheckBox 
		        android:id="@+id/insuficientPowerBox"
		        android:text="Insuficient Power"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
        </TableRow>
        
        <TableRow>
			<CheckBox 
		        android:id="@+id/commisionFailedBox"
		        android:text="Commision Failed"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
			<CheckBox 
		        android:id="@+id/timeNotSetBox"
		        android:text="Time not set"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
        </TableRow>

        <TableRow>
			<CheckBox 
		        android:id="@+id/sensorMalfunctionBox"
		        android:text="Sensor Malfunction"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
			<CheckBox 
		        android:id="@+id/decryptionErrorBox"
		        android:text="Decryption Error"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
		</TableRow>
		
        <TableRow>
			<CheckBox 
		        android:id="@+id/invalidCommandBox"
		        android:text="Invalid Command"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
			<CheckBox 
		        android:id="@+id/logOverflowBox"
		        android:text="Log Overflow"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
		</TableRow>
		
        <TableRow>
			<CheckBox 
		        android:id="@+id/ackFailureBox"
		        android:text="ACK Failure"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
			<CheckBox 
		        android:id="@+id/configFailedBox"
		        android:text="Configuration Failed"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
		</TableRow>
		
        <TableRow>
			<CheckBox 
		        android:id="@+id/sensorEnableFailedBox"
		        android:text="Sensor Enable Failed"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:textSize="12dp"/>
		</TableRow>
        
	</TableLayout>

</LinearLayout>

</ScrollView>