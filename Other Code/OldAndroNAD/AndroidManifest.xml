<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="hnad.android"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" 
    		  android:targetSdkVersion="8" 
    />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".Activity.MainActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.DeviceInfoActivity"
                  android:label="@string/device_info"
                  android:configChanges="orientation|keyboardHidden" 
        />
       	<activity android:name=".Activity.TripInfoActivity"
                  android:label="@string/trip_info"
                  android:configChanges="orientation|keyboardHidden" 
        />
        <activity android:name=".Activity.TripStateActivity"
                  android:label="@string/sis"
                  android:configChanges="orientation|keyboardHidden" 
        />
        <activity android:name=".Activity.DeviceLogActivity"
                  android:label="@string/device_log"
                  android:configChanges="orientation|keyboardHidden" 
        />
        <activity android:name=".Activity.SettingsActivity"
                  android:label="@string/settings"
                  android:configChanges="orientation|keyboardHidden" 
        />
        <service android:name=".Service.UdpAndroNadService"/>
    </application>
</manifest> 